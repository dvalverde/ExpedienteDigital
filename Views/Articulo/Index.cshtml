@model IEnumerable<ExpDigital.Models.Articulo>

@{
    ViewBag.Title = "Index";
}

<h2 class="move-right">Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table move-right">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.numeroAutores)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.anno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.revista)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.consejoEditorial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Pai.nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.numeroAutores)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.anno)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.revista)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.consejoEditorial)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pai.nombre)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>