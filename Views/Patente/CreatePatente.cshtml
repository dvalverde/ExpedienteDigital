@model ExpDigital.Models.Patente

@{
    ViewBag.Title = "CreatePatente";
}


@using (Html.BeginForm("CreatePatente", "Patente", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="content-container">

        <div class="container-fluid">
            @if (ViewBag.patenteAgregado != null)
            {
                <div class="alert alert-success">
                    <strong>Patente Agregada!</strong> La patente se agregó satisfactoriamente
                </div>
            }
            @if (ViewBag.errorPatente != null)
            {
                <div class="alert alert-danger">
                    <strong>Error!</strong> No se pudo agregar la patente.
                </div>
            }

            <!-- Main component for a primary marketing message or call to action -->
            <div class="jumbotron" style="background-color: #eeeeee">
                <h1>Patente de Invención</h1>
                <br />
                <br />
                <p class="text-info">Complete la información correspondiente</p>
                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="inputEmail4">Título de la Patente</label>
                            <div>
                                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <br />
                    <br />
                    <p class="text-info">Subir PDF:</p>
                    <div class="form-group mt-3 col-md-10">
                        <input type="file" name="upload" required />
                        @*<input type="file" id="file" name="file" value="ActionHandlerForForm" />*@
                        @* @Html.TextBoxFor(model => model.file, new { type = "file" })
                            <input type="submit" id="btnUpload" value="Upload" />*@
                    </div>

                    <br />
                    <br />
                    <br />
                    <br />

                    @*<button type="submit" class="btn btn-outline-primary">Agregar otra Patente</button>*@
                    @*<button type="submit" class="btn btn-primary" onclick="aceptarAutoresPatente()" >Aceptar</button>*@
                    @*<button type="submit" class="btn btn-primary" onclick="aceptarAutoresPatente()">Aceptar</button>*@
                    <input type="submit" value="Aceptar" class="btn btn-primary" />
                </form>

            </div>

        </div>
    </div>


}

