@model ExpDigital.Models.ModeloUtilidad

@{
    ViewBag.Title = "CreateModeloUtilidad";
}


@using (Html.BeginForm("CreateModeloUtilidad", "ModeloUtilidad", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="content-container">

        <div class="container-fluid">

            @if (ViewBag.utilidadAgregado != null)
            {
                <div class="alert alert-success">
                    <strong>Modelo de Utilidad Agregado!</strong> el modelo de utilidad se agregó satisfactoriamente
                </div>
            }
            @if (ViewBag.errorUtilidad != null)
            {
                <div class="alert alert-danger">
                    <strong>Error!</strong> No se pudo agregar el modelo de utilidad. @ViewBag.errorUtilidad
                </div>
            }

            <!-- Main component for a primary marketing message or call to action -->
            <div class="jumbotron">
                <h1>Modelo de Utilidad</h1>
                <br />
                <br />
                <p class="text-info">Complete la información correspondiente</p>
                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="inputEmail4">Nombre del Modelo</label>
                            <div>
                                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group col-md-12">
                            <label for="inputEmail4">Tipo del Modelo</label>
                            <div>
                                @Html.EditorFor(model => model.tipoModelo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.tipoModelo, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <p>Innovación Docente?</p>

                        <div class="custom-control custom-radio custom-control-inline">
                            @Html.RadioButtonFor(m => m.innovacionDocente, "Si", new { @class = "form-control col-md-3" })@Html.Label("Sí", new { @class = "radio-labels col-md-5" })
                            @Html.RadioButtonFor(m => m.innovacionDocente, "No", new { @class = "form-control col-md-3" })@Html.Label("No", new { @class = "radio-labels col-md-6" })
                        </div>

                    </div>
                    <br />
                    <br />
                    <br />
                    <p class="text-info">Subir PDF:</p>
                    <div class="form-group mt-3 col-md-10">
                        <input type="file" name="upload" />
                    </div>

                    <br />
                    <br />
                    <br />
                    <br />

                    <button type="submit" class="btn btn-primary" runat="server">Aceptar</button>

                </form>

            </div>

        </div>
    </div>


}

