@model ExpDigital.Models.Persona

@{
    ViewBag.Title = "CreatePersona";
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoTEC</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/nav-side.css" />
    <link rel="stylesheet" href="~/Content/Site.css" />
    <style>
    </style>
</head>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="content-container" style="
        position: fixed;
        width: 100vw;
        height: 100vw;
        left:-80px;
        ">

        <div class="container-fluid">

            <!-- Main component for a primary marketing message or call to action -->
            <div class="jumbotron" style="background-color: #eeeeee">
                <h1>Datos Personales</h1>
                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <form>
                    <div class="form-row">

                        <div class="form-group col-md-2">


                            <label for="inputEmail4">Nombre</label>
                            <div>

                                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group col-md-2">
                            <label for="inputEmail4">Primer Apellido</label>
                            <div>
                                @Html.EditorFor(model => model.apellido1, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.apellido1, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group col-md-2">
                            <label for="inputEmail4">Segundo Apellido</label>
                            <div>
                                @Html.EditorFor(model => model.apellido2, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.apellido2, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group col-md-2">
                            <label for="inputPassword4">Cédula</label>
                            <div>
                                @Html.EditorFor(model => model.cedula, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.cedula, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            @*<label for="inputPassword4">Correo</label>
                                <div >
                                    @Html.EditorFor(model => model.correoElectronico, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.correoElectronico, "", new { @class = "text-danger" })
                                </div>*@

                        </div>
                        <div class="form-group col-md-2">
                            <label for="inputPassword4">Teléfono</label>
                            <div>
                                @Html.EditorFor(model => model.celular, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.celular, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Departamento o Escuela</label>
                            <div>
                                @Html.EditorFor(model => model.departamento, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.departamento, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group col-md-5">
                            <label for="inputPassword4">Puesto</label>
                            <div>
                                @Html.EditorFor(model => model.puesto, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.puesto, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="inputPassword4">Paso Actual</label>
                            <div>
                                @Html.EditorFor(model => model.categoria, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.categoria, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            <label for="inputPassword4">Paso Solicitado</label>
                            <input type="text" class="form-control" id="inputCed">
                        </div>
                    </div>

                    <br />

                    <div class="form-group">
                        <h6> Cambiar contraseña temporal. El cambio es obligatorio</h6>
                        <br />
                        <div class="form-group col-md-6">
                            <label for="inputPassword4">Nueva Contraseña</label>
                            <div>
                                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control", @required = "required", @type = "password" } })
                                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                            </div>

                        </div>

                    </div>


                    <div class="form-group">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="gridCheck">
                            <label class="form-check-label" for="gridCheck">
                                Autorizo a la Comisión de Carrera Profesional
                            </label>
                        </div>

                    </div>
                    <button type="submit" class="btn btn-primary">Enviar y Guardar</button>
                </form>

            </div>

        </div>
    </div>

}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}