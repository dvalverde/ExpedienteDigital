@model ExpDigital.Models.CapacitacionInterna

@{
    ViewBag.Title = "CreateCapacitacion";
}


@using (Html.BeginForm("CreateCapacitacion", "CapacitacionInterna", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="content-container">

        <div class="container-fluid">
            <!--Verifico si hay un error o si se agrego un libro-->
            @if (ViewBag.capaAgrega != null)
            {
                <div class="alert alert-success">
                    <strong>Capacitacion Agregada!</strong> La capacitacion se agregó satisfactoriamente
                </div>
            }
            @if (ViewBag.errorcapa != null)
            {
                <div class="alert alert-danger">
                    <strong>Error!</strong> No se pudo agregar la capacitacion.
                </div>
            }

            <!-- Main component for a primary marketing message or call to action -->
            <div class="jumbotron" style="background-color: #eeeeee">
                <h1>Capacitación Interna</h1>
                <br />
                <br />
                <p class="text-info">Complete la información correspondiente</p>
                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="inputEmail4">Nombre de la Capacitación</label>
                            <div>
                                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <br />
                    <br />
                    <p class="text-info">Subir PDF:</p>
                    <div class="form-group mt-3 col-md-10">
                        <input type="file" name="upload" required />

                    </div>

                    <br />
                    <br />
                    <br />
                    <br />

                    <input type="submit" value="Aceptar" class="btn btn-primary" />
                </form>

            </div>

        </div>
    </div>


}


