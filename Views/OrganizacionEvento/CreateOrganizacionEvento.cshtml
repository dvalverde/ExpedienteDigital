@model ExpDigital.Models.OrganizacionEvento

@{
    ViewBag.Title = "CreateOrganizacionEvento";
}


@using (Html.BeginForm("CreateOrganizacionEvento", "OrganizacionEvento", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="content-container">

        <div class="container-fluid">

            @if (ViewBag.organizacionEventoAgregado != null)
            {
                <div class="alert alert-success">
                    <strong>Organización de Eventos de Proyección Externa Agregado!</strong> La Organización de Eventos de Proyección Externa se agregó satisfactoriamente.
                </div>
            }
            @if (ViewBag.errorOrganizacionEvento != null)
            {
                <div class="alert alert-danger">
                    <strong>Error!</strong> No se pudo agregar la Organización de Eventos de Proyección Externa.
                </div>
            }

            <!-- Main component for a primary marketing message or call to action -->
            <div class="jumbotron" style="background-color: #eeeeee">
                <h1>Organización de Eventos de Proyección Externa</h1>
                <br />
                <br />
                <p class="text-info">Complete la información correspondiente</p>
                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="inputEmail4">Nombre del Evento</label>
                            <div>
                                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <br />

                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="inputEmail4">Año</label>
                            <div>
                                @Html.EditorFor(model => model.anno, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.anno, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <br />
                    <p class="text-info">Cargar Comprobante:</p>
                    <div class="form-group mt-3 col-md-10">
                        <input type="file" name="upload" required />
                    </div>

                    <br />
                    <br />
                    <br />
                    <br />

                    <input type="submit" value="Aceptar" class="btn btn-primary" />
                </form>

            </div>

        </div>
    </div>


}


