@model ExpDigital.Models.ColaboracionEvento

@{
    ViewBag.Title = "CreateColaboracionEvento";
}


@using (Html.BeginForm("CreateColaboracionEvento", "ColaboracionEvento", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="content-container">

        <div class="container-fluid">

            @if (ViewBag.obraAgregado != null)
            {
                <div class="alert alert-success">
                    <strong>Colaboración en Eventos Externos Agregada!</strong> La Colaboración en Eventos Externos se agregó satisfactoriamente
                </div>
            }
            @if (ViewBag.errorObra != null)
            {
                <div class="alert alert-danger">
                    <strong>Error!</strong> No se pudo agregar la Colaboración en Eventos Externos.
                </div>
            }

            <!-- Main component for a primary marketing message or call to action -->
            <div class="jumbotron">
                <h1>Colaboración en Eventos Externos</h1>
                <br />
                <br />
                <p class="text-info">Complete la información correspondiente</p>
                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="inputEmail4">Nombre del Evento</label>
                            <div>
                                @Html.EditorFor(model => model.nombreEvento, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.nombreEvento, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="inputEmail4">Nombre de la Entidad Externa donde se realizo la Actividad</label>
                            <div>
                                @Html.EditorFor(model => model.nombreEntidad, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.nombreEntidad, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <br />
                    <br />
                    <p class="text-info">Cargar Evidencias:</p>
                    <div class="form-group mt-3 col-md-10">
                        <input type="file" name="upload" />
                    </div>

                    <p class="text-info">Subir Resumen:</p>
                    <div class="form-group mt-3 col-md-10">
                        <input type="file" name="uploadCert" />
                    </div>

                    <br />
                    <br />
                    <br />
                    <br />

                    <input type="submit" value="Aceptar" class="btn btn-primary" />
                </form>

            </div>

        </div>
    </div>


}