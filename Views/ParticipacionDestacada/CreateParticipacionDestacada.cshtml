@model ExpDigital.Models.ParticipacionDestacada

@{
    ViewBag.Title = "CreateParticipacionDestacada";
}


@using (Html.BeginForm("CreateParticipacionDestacada", "ParticipacionDestacada", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="content-container">

        <div class="container-fluid">

            @if (ViewBag.destacadaAgregado != null)
            {
                <div class="alert alert-success">
                    <strong>Participación Destacada Agregada!</strong> la participación destacada se agregó satisfactoriamente
                </div>
            }
            @if (ViewBag.errorDestacada != null)
            {
                <div class="alert alert-danger">
                    <strong>Error!</strong> No se pudo agregar la participación destacada. @ViewBag.errorDestacada
                </div>
            }

            <!-- Main component for a primary marketing message or call to action -->
            <div class="jumbotron" style="background-color: #eeeeee">
                <h1>Participación Destacada en Eventos de Proyección Externa</h1>
                <br />
                <br />
                <p class="text-info">Complete la información correspondiente</p>
                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="inputEmail4">Nombre del Evento</label>
                            <div>
                                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group col-md-12">
                            <label for="inputEmail4">Rol</label>
                            <div>
                                @Html.EditorFor(model => model.rol, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.rol, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group col-md-12">
                            <label for="inputEmail4">Año</label>
                            <div>
                                @Html.EditorFor(model => model.anno, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.anno, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <br />
                    <br />
                    <p class="text-info">Subir PDF:</p>
                    <div class="form-group mt-3 col-md-10">
                        <input type="file" name="upload" />
                    </div>

                    <br />
                    <br />
                    <br />
                    <br />
                    <button type="submit" class="btn btn-primary" runat="server">Aceptar</button>
                </form>

            </div>

        </div>
    </div>


}


