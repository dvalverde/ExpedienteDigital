@model ExpDigital.Models.ProyectoInvestigacion

@{
    ViewBag.Title = "CreateProyectoInvestigacion";
}


@using (Html.BeginForm("CreateProyectoInvestigacion", "ProyectoInvestigacions", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="content-container">

        <div class="container-fluid">

            @if (ViewBag.proyectoInvestigacionAgregado != null)
            {
                <div class="alert alert-success">
                    <strong>Proyecto de Investigación Agregado!</strong> El Proyecto de Investigación se agregó satisfactoriamente.
                </div>
            }
            @if (ViewBag.errorProyectoInvestigacion != null)
            {
                <div class="alert alert-danger">
                    <strong>Error!</strong> No se pudo agregar el Proyecto de Investigación. @ViewBag.errorProyectoInvestigacion
                </div>
            }

            <!-- Main component for a primary marketing message or call to action -->
            <div class="jumbotron" style="background-color: #eeeeee">
                <h1>Proyecto de Investigación y Extensión</h1>
                <br />
                <br />
                <p class="text-info">Complete la información correspondiente</p>
                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="inputEmail4">Nombre del Proyecto</label>
                            <div>
                                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <br />

                    <p class="text-info">Cargar Archivo de Aprobación:</p>
                    <div class="form-group mt-3 col-md-10">
                        <input type="file" name="upload" required />
                    </div>
                    <br />
                    <br />

                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="inputEmail4">Nombre del Libro, Artículo o Revista donde se publicó</label>
                            <div>
                                @Html.EditorFor(model => model.medioDivulgacion, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.medioDivulgacion, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <br />
                    <p class="text-info">Cargar PDF:</p>
                    <div class="form-group mt-3 col-md-10">
                        <input type="file" name="upload1" required />
                    </div>

                    <br />
                    <br />
                    <br />
                    <br />

                    <input type="submit" value="Aceptar" class="btn btn-primary" />
                </form>

            </div>

        </div>
    </div>


}


