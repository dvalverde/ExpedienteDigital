@model ExpDigital.Models.Publicacion

@{
    ViewBag.Title = "CreatePublicacion";
}


@using (Html.BeginForm("CreatePublicacion", "Publicacion", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="content-container">

        <div class="container-fluid">
            @if (ViewBag.publicacionAgregado != null)
            {
                <div class="alert alert-success">
                    <strong>Publicación Agregada!</strong> La publicación se agregó satisfactoriamente
                </div>
            }
            @if (ViewBag.errorPublicacion != null)
            {
                <div class="alert alert-danger">
                    <strong>Error!</strong> No se pudo agregar la publicación.
                </div>
            }

            <!-- Main component for a primary marketing message or call to action -->
            <div class="jumbotron" style="background-color: #eeeeee">
                <h1>Publicaciones y Divulgaciones Científicas y Culturales en un Medio de Comunicación Masiva</h1>
                <br />
                <br />
                <p class="text-info">Complete la información correspondiente</p>
                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="inputEmail4">Nombre de la publicación</label>
                            <div>
                                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <br />
                    <br />
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="inputEmail4">Medio de publicación</label>
                            <div>
                                @Html.EditorFor(model => model.medioPublicacion, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.medioPublicacion, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <br />
                    <br />
                    <p class="text-info">Cargar comprobante:</p>
                    <div class="form-group mt-3 col-md-10">
                        <input type="file" name="upload" required />

                    </div>

                    <br />
                    <br />
                    <br />
                    <br />

                    <input type="submit" value="Aceptar" class="btn btn-primary" />
                </form>

            </div>

        </div>
    </div>


}

