@model ExpDigital.Models.CursoContinuo

@{
    ViewBag.Title = "CreateCursoContinuo";
}


@using (Html.BeginForm("CreateCursoContinuo", "CursoContinuo", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="content-container">

        <div class="container-fluid">

            @if (ViewBag.obraAgregado != null)
            {
                <div class="alert alert-success">
                    <strong>Curso de Educación Continua Agregado!</strong> El Curso de Educación Continua se agregó satisfactoriamente
                </div>
            }
            @if (ViewBag.errorObra != null)
            {
                <div class="alert alert-danger">
                    <strong>Error!</strong> No se pudo agregar el Curso de Educación Continua.
                </div>
            }

            <!-- Main component for a primary marketing message or call to action -->
            <div class="jumbotron">
                <h1>Cursos de Educación Continua</h1>
                <br />
                <br />
                <p class="text-info">Complete la información correspondiente</p>
                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="inputEmail4">Nombre del Curso</label>
                            <div>
                                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="inputEmail4">Año en que se curso</label>
                            <div>
                                @Html.EditorFor(model => model.anno, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.anno, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <br />
                    <br />
                    <p class="text-info">Cargar Comprobante:</p>
                    <div class="form-group mt-3 col-md-10">
                        <input type="file" name="upload" />
                    </div>

                    <br />
                    <br />
                    <br />
                    <br />

                    <input type="submit" value="Aceptar" class="btn btn-primary" />
                </form>

            </div>

        </div>
    </div>


}