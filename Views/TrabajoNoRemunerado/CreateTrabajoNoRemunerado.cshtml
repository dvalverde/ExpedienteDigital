@model ExpDigital.Models.TrabajoNoRemunerado

@{
    ViewBag.Title = "CreateTrabajoNoRemunerado";
}


@using (Html.BeginForm("CreateTrabajoNoRemunerado", "TrabajoNoRemunerado", FormMethod.Post, new { enctype = "multipart/form-data" }))

{
    @Html.AntiForgeryToken()

    <div class="content-container">

        <div class="container-fluid">
            @if (ViewBag.trAgregado != null)
            {
                <div class="alert alert-success">
                    <strong>Trabajo Agregado!</strong> el trabajo se agregó satisfactoriamente
                </div>
            }
            @if (ViewBag.errortrab != null)
            {
                <div class="alert alert-danger">
                    <strong>Error!</strong> No se pudo agregar el trabajo.
                </div>
            }
            <!-- Main component for a primary marketing message or call to action -->
            <div class="jumbotron">
                <h1>Trabajos De Graduación No Remunerados en Carreras del ITCR</h1>
                <br />
                <br />
                <p class="text-info">Complete la información correspondiente</p>
                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-8">
                            <label for="inputEmail4">Nombre del Trabajo No Remunerado</label>
                            <div>
                                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group col-md-4">
                            <label for="inputEmail4">Periodo Lectivo en el que se desarrollo la actividad</label>
                            <div>
                                @Html.EditorFor(model => model.periodoLectivo, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                                @Html.ValidationMessageFor(model => model.periodoLectivo, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <br />
                    <br />
                    <p class="text-info">Subir PDF:</p>
                    <div class="form-group mt-3 col-md-10">
                        <input type="file" name="upload" required />
                        @*<input type="file" id="file" name="file" value="ActionHandlerForForm" />*@
                        @* @Html.TextBoxFor(model => model.file, new { type = "file" })
                    <input type="submit" id="btnUpload" value="Upload" />*@
                    </div>

                    <br />
                    <br />
                    <br />
                    <br />

                    @*<button type="submit" class="btn btn-outline-primary">Agregar otro Trabajo</button>*@
                    @*<button type="submit" class="btn btn-primary" onclick="aceptarAutoresTrabajoNoRemunerado()" >Aceptar</button>*@
                    @*<button type="submit" class="btn btn-primary" onclick="aceptarAutoresTrabajoNoRemunerado()">Aceptar</button>*@
                    <input type="submit" value="Aceptar" class="btn btn-primary" />
                </form>

            </div>

        </div>
    </div>


}

