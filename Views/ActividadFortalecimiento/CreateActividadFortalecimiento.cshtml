@model ExpDigital.Models.ActividadFortalecimiento

@{
    ViewBag.Title = "CreateActividadFortalecimiento";
}


@using (Html.BeginForm("CreateActividadFortalecimiento", "ActividadFortalecimiento", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="content-container">

        <div class="container-fluid">

            @if (ViewBag.fortalecimientoAgregado != null)
            {
                <div class="alert alert-success">
                    <strong>Actividad de Fortalecimiento Agregada!</strong> la actividad de fortalecimiento se agregó satisfactoriamente.
                </div>
            }
            @if (ViewBag.errorFortalecimiento != null)
            {
                <div class="alert alert-danger">
                    <strong>Error!</strong> No se pudo agregar la actividad de fortalecimiento. @ViewBag.errorFortalecimiento
                </div>
            }

            <!-- Main component for a primary marketing message or call to action -->
            <div class="jumbotron" style="background-color: #eeeeee">
                <h1>Actividades para el Fortalecimiento de la Investigación y Extensión</h1>
                <br />
                <br />
                <p class="text-info">Complete la información correspondiente</p>
                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <form>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="inputEmail4">Nombre del Organismo</label>
                            <div>
                                @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>
                    <br />
                    <br />
                    <br />
                    <p class="text-info">Subir PDF:</p>
                    <div class="form-group mt-3 col-md-10">
                        <input type="file" name="upload" />
                    </div>

                    <br />
                    <br />
                    <br />
                    <br />

              
                    <button type="submit" class="btn btn-primary" runat="server">Aceptar</button>
                </form>

            </div>

        </div>
    </div>


}


